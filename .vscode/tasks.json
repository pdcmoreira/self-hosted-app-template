{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend Debug",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:backend:debug"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*nodemon.*starting.*$",
          "endsPattern": "^.*Debugger listening on.*$"
        }
      }
    }
  ]
}
