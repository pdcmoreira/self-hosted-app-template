{
  "name": "@self-hosted-app-template/backend",
  "version": "1.0.0",
  "description": "Backend API for self-hosted application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts,tsx,json --exec \"pnpm exec ts-node -r tsconfig-paths/register src/server.ts\"",
    "dev:debug": "nodemon --watch src --ext ts,tsx,json --exec \"node --inspect=0.0.0.0:9231 --enable-source-maps -r ts-node/register -r tsconfig-paths/register src/server.ts\"",
    "debug": "node --inspect=0.0.0.0:9231 --enable-source-maps -r ts-node/register -r tsconfig-paths/register src/server.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "@self-hosted-app-template/shared": "workspace:*",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.7",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.32",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.7",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "",
  "license": "ISC"
}
